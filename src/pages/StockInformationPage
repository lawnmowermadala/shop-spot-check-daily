import React, { useState } from 'react';
import { useNavigate } from 'react-router-dom';

const StockInformationPage = () => {
  const navigate = useNavigate();
  const [stockCode, setStockCode] = useState("");

  const handleGoBack = () => {
    navigate(-1);
  };

  return (
    <div className="min-h-screen bg-gray-100 p-6">
      <div className="container mx-auto max-w-6xl">
        <button onClick={handleGoBack} className="mb-4 p-2 bg-blue-500 text-white rounded">
          Back
        </button>
        
        <div className="bg-white p-6 rounded-lg shadow">
          <h1 className="text-2xl font-bold mb-4">Stock Information</h1>
          
          <div className="mb-4">
            <label className="block mb-2 font-semibold">Stock Code</label>
            <input 
              type="text" 
              value={stockCode}
              onChange={(e) => setStockCode(e.target.value)}
              className="w-full p-2 border rounded"
              placeholder="Enter stock code"
            />
          </div>
          
          <button 
            onClick={() => alert(`Searching for: ${stockCode}`)}
            className="bg-green-500 text-white p-2 rounded"
          >
            Search
          </button>
        </div>
      </div>
    </div>
  );
};

export default StockInformationPage;
